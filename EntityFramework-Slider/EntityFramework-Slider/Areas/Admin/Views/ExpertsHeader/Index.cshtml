@model IEnumerable<ExpertsHeader> 
@{
	ViewData["Title"] = "ExpertsHeader";
}



<div style="padding-left:200px" class="container">

	<a asp-action="Create" style="border:1px solid green;margin-bottom:20px;;margin-top:20px;margin-left:850px;text-decoration-color:white;" class="btn btn-success">Create</a>

	<div class="tab-content" id="orders-table-tab-content">
		<div class="tab-pane fade show active" id="orders-all" role="tabpanel" aria-labelledby="orders-all-tab">
			<div class="app-card app-card-orders-table shadow-sm mb-5">
				<div class="app-card-body">
					<div class="table-responsive">
						<table class="table app-table-hover mb-0 text-left">
							<thead>
								<tr>
									<th class="cell">Title</th>
									<th class="cell">Description</th>
									<th style="width: 340px;" class="cell">Operations</th>

								</tr>
							</thead>
							<tbody>

							 
							
								@foreach (var expertsHeader in Model)
								{
									<tr>
										<td class="cell">
											<h4>@Html.Raw(expertsHeader.Title)</h4>
										</td>

										<td class="cell">
											@expertsHeader.Description
										</td>

										<td class="cell">
											<a asp-action="Detail" asp-route-id="@expertsHeader.Id" style="border:1px solid blue" class="btn btn-outline-info">Info</a>
											<a asp-action="Edit" asp-route-id="@expertsHeader.Id" style="border:1px solid green" class="btn btn-outline-primary">Edit</a>
											<form style="display:inline-block" asp-action="Delete" asp-route-id="@expertsHeader.Id" method="post">
												<button type="submit" style="border:1px solid red" class="btn btn-outline-danger">Delete</button>
											</form>
										
										</td>

									</tr>
								}
						
								
								
							


							</tbody>
						</table>
					</div><!--//table-responsive-->

				</div><!--//app-card-body-->
			</div><!--//app-card-->


		</div><!--//tab-pane-->




	</div><!--//tab-content-->

</div>



